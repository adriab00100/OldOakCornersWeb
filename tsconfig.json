{
  "include": ["src/**/*"],
  "exclude": ["dist", "public", "node_modules", ".cache"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2019"],
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "paths": {
      "*": [
        "./node_modules/*",
        "./types/*"
    ]}
  }
}
